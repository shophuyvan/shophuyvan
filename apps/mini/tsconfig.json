{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
  "@/*": ["./src/*"],
  "@shared/*": ["../../packages/shared/src/*"]
},
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "types": ["vite/client", "node"]
  },
  "include": ["src"]
}
